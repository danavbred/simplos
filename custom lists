    const container = document.getElementById('custom-lists-container');
    if (!container) return;
    
    container.innerHTML = `
    <div class="empty-state">
        <i class="fas fa-list-alt" style="font-size: 3rem; color: var(--accent); margin-bottom: 1rem;"></i>
